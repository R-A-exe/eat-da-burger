<main>
    <h1>Eat Da Burger!</h1>
    <table>
        <tbody>
            {{#each burger}}
            {{#unless devoured}}
            <tr>
                <td><span>{{id}} - {{burger_name}}</span>
                    <div><button class='devour' data-id={{id}}>Devour</button></div>
                </td>
            </tr>
            {{/unless}}
            {{/each}}
        </tbody>
    </table>
    <table>
        <tbody>
            {{#each burger}}
            {{#if devoured}}
            <tr>
                <td><span class="devoured">{{id}} - {{burger_name}}</span></td>
            </tr>
            {{/if}}
            {{/each}}
        </tbody>
    </table>
    <form>
        <input id="name" type="text">
        <button id="newBurger">Submit</button>
    </form>
</main>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script>
    $('#newBurger').click(e => {
        e.preventDefault;
        var name = $('#name').val();
        if (name=="") return;
        $.post('api/burger/', { name: name }, res => {
            location.reload();
        });
    })

    $(document).ready(function () {
        $(".devour").click(function (event) {
            event.preventDefault;
            var id = $(event.target).data('id');
            $.ajax({
                url: `/api/burger/${id}`, type: 'PUT', success: function () {
                    location.reload();
                }
            });
        });
    });
</script>